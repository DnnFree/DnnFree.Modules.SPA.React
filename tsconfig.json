{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "noImplicitAny": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "allowJs": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}